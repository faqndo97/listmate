<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t(".lists") %></h1>
    <%= link_to t(".new_list"), new_list_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="lists" class="min-w-full">
    <% @lists.each do |list| %>
      <%= tag.div id: dom_id(list) do %>
        <p class="my-5">
          <strong class="block font-medium mb-1"><%= "#{List.human_attribute_name(:title)}:" %></strong>
          <%= list.title %>
        </p>

        <%= link_to t(".show"), list_path(list, locale: I18n.locale), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <% end %>
    <% end %>
  </div>
</div>
