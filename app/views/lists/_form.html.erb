<%= form_with(model: list, local: true, class: "contents", data: { controller: "nested-form" }) do |form| %>
  <% if list.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <template data-nested-form-target='template'>
    <%= form.fields_for :items, Item.new, child_index: "TEMPLATE_RECORD" do |item_fields| %>
      <div class="nested-fields flex items-center">
        <%= item_fields.hidden_field :_destroy %>
        <%= item_fields.check_box :completed %>
        <%= item_fields.text_field :description, class: "mx-4 shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>

        <%= link_to "#", data: { action: "nested-form#removeAssociation" } do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    <% end %>
  </template>

  <div class="mb-4">
    <%= form.fields_for :items do |item_fields| %>
      <div class="nested-fields flex items-center">
        <%= item_fields.hidden_field :_destroy %>
        <%= item_fields.check_box :completed %>
        <%= item_fields.text_field :description, class: "mx-4 shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>

        <%= link_to "#", data: { action: "nested-form#removeAssociation" } do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    <% end %>
    <div data-nested-form-target="addItem">
    </div>
  </div>

  <div class="mb-4">
    <%= link_to "Add Item", "#", class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium cursor-pointer", id: "add_item", data: { action: "nested-form#addAssociation" } %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
